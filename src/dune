;
;- to search for missing rules in parser.messages:
;  dune build @src/lib/missing
;- to build bytecode
;  dune build src/touist.bc
;- to build native
;  dune build src/touist.bc
;- to build the js
;  dune build src/lib/touist
;

(executable
 (name main)
 (libraries re re.str touist touist.qbf touist.yices2 unix cmdliner))

(rule
 (targets touist.1)
 (action
  (with-stdout-to
   %{targets}
   (run %{bin:touist} --help=groff))))

(rule
 (targets version.ml)
 (action
  (with-stdout-to
   %{targets}
   (run echo "let v = \"%{version:touist}\""))))

(install
 (section bin)
 (files
  (main.exe as touist)
  (solver_executables/modal_logic/S5Cheetah as modal_logic_s5cheetah_solver)))

(install
 (section man)
 (files touist.1))

(documentation)
